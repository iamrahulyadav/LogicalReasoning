<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke android:width="2dip" android:color="#0084FF" />
            <gradient android:angle="-90" android:endColor="#0084FF" android:startColor="#0084FF" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="#005e7974" />
            <solid android:color="#0158857e" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke android:width="2dip" android:color="#0084FF" />
            <gradient android:angle="-90" android:endColor="#000084ff" android:startColor="#090084ff" />
        </shape>
    </item>

</selector>